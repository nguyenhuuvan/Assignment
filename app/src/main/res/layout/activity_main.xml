<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.MainActivity">

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/poly" />

    <TextView
        android:id="@+id/tieude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imglogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Quản Lí Thu Chi"
        android:textColor="#ff5900"
        android:textSize="32dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/qlthu"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/tieude"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ff5900"
        android:onClick="QlThu"
        android:text="Quản Lí Thu"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/qlchi"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/qlthu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ff5900"
        android:onClick="QlChi"
        android:text="Quản Lí Chi"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</RelativeLayout>